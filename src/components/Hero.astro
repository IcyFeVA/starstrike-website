---
import { Link } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'

/**
 * Hero Component
 *
 * @description A component that displays a hero section with a title, description, and image
 */
interface Props {
  /**
   * The source URL for the image
   */
  src?: string
}

const { src = '/hero-comp.webp' }: Props = Astro.props
---

<section class="hero my-24">
  <div class="container">
    <div class="relative grid min-h-[600px] grid-cols-1 lg:grid-cols-[45%_55%]">
      <div
        class="content-side relative z-10 flex flex-col justify-center overflow-hidden bg-[#0f172a] p-8 text-white lg:rounded-l-2xl lg:p-12"
      >
        <div class="max-w-xl">
          <!-- <div class="mb-4 inline-flex items-center rounded-full border border-indigo-500/30 bg-indigo-500/10 px-3 py-1 text-sm text-indigo-300">
            Anim aute id magna aliqua ad ad non deserunt sunt. <span class="ml-1 text-indigo-400 font-semibold">Read more â†’</span>
          </div> -->
          <h1 class="mb-6 text-5xl font-bold tracking-tight sm:text-6xl">
            <slot><span class="text-gradient">Starstrike</span> makes writing blazingly fast</slot>
          </h1>
          <!-- <p class="mb-8 text-lg text-gray-300">
            Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet
            fugiat veniam occaecat fugiat aliqua.
          </p> -->
          <div class="flex flex-wrap gap-4">
            <Link
              href="#get-started"
              isButton
              type="primary"
              class="border-none bg-indigo-600 text-white hover:bg-indigo-500"
            >
              Get started
            </Link>
            <Link
              href="#learn-more"
              class="flex items-center gap-2 font-semibold text-white transition-colors hover:text-indigo-300"
            >
              Learn more <Icon name="lucide:arrow-right" size="1.2rem" />
            </Link>
          </div>
        </div>
        <!-- Diagonal overlay for the left side to create the angle -->
        <!-- <div
          class="absolute top-0 right-0 bottom-0 hidden w-32 origin-bottom translate-x-1/2 skew-x-[-6deg] bg-[#0f172a] lg:block"
        >
        </div> -->
      </div>

      <div class="image-side relative h-64 overflow-hidden lg:h-auto lg:rounded-r-2xl">
        <Image
          class="absolute inset-0 h-full w-full object-cover"
          src={src}
          alt="Hero image"
          width={1600}
          height={900}
          loading="eager"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-[#0f172a]/50 to-transparent lg:hidden"></div>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .text-gradient {
    background: linear-gradient(
      315deg,
      light-dark(var(--color-primary-300), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-300), var(--color-primary-200))
    );
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
